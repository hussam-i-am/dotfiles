dotfiles=$(readlink $HOME/.dotfiles || echo "$HOME/.dotfiles")
for file in $(find $dotfiles -name 'path.sh'); do
  source "$file"
done

for file in $(find $dotfiles -name '*.sh' | egrep -v '/bin/|(install|path)\.sh'); do
  source "$file"
done

[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion

true # last command should have a zero exit code
