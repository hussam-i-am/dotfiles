[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[apply]
	whitespace = fix
[alias]
	ci = commit -v
	cia = commit -av
	st = status -sb
	co = checkout
	dh = diff -w HEAD
	ds = diff HEAD --stat
	unstage = reset HEAD --
	untrack = rm --cached
	di = diff --cached
	du = !git diff `git merge-base HEAD origin/master`
	p = pull --stat
  pp = !git push && git pull
	recent = for-each-ref --count=5 --sort=-committerdate --format='%(refname:short)' refs/heads/
  lg = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n'
  lgb = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n' --first-parent
  lgu = !git log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n' `git merge-base HEAD origin/master`..
  lgs = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n%+b' --stat
  lgbs = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n%+b' --first-parent --stat
	au = add -u
	f = fetch --all --prune
	ribbon = tag --force _ribbon origin/master
	catchup = log --patch --reverse --topo-order _ribbon..origin/master
	apply-commit = !git format-patch -1 --stdout $@ | git apply - --reject
	amend = commit --amend
	ca = commit --amend -v
	rc = rebase --continue
	ri = rebase --interactive
	riu = rebase --interactive @{upstream}
	s = stash
	sp = stash pop
	ap = add -p
	lp = log -p
	ss = stash show -p
	ls = log -p -S
	cob = checkout -b
	sha = rev-parse HEAD
	cb = clean-merged-branches
	clean-merged-branches = "!git branch --merged | grep  -v '\\*\\|master' | xargs -n 1 git branch -d"
[core]
	excludesfile = /opt/boxen/config/git/gitignore
	autocrlf = input
[branch]
	autosetupmerge = true
	autosetuprebase = remote
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[diff]
	tool = opendiff
	algorithm = patience
[merge]
	tool = opendiff
	conflictstyle = diff3
	ff = no
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[url "git@heroku.com:"]
	insteadOf = "heroku:"
[pull]
	rebase = true
[push]
	default = tracking
[include]
	path = code/gitconfig
	path = work/gitconfig
	path = .gitsecrets
[advice]
	statusHints = false
[rerere]
	enabled = true
[credential]
	helper = /opt/boxen/bin/boxen-git-credential
[user]
	name = Nathan Witmer
	email = nathan@zerowidth.com

[hub]
protocol = https
[github]
	username = zerowidth
