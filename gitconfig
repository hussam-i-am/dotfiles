[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[svn]
[apply]
	whitespace = fix
[alias]
	ci = commit
	st = status -sb
	co = checkout
	dh = diff -w HEAD
	ds = diff HEAD --stat
	unstage = reset HEAD --
  untrack = rm --cached
	di = diff --cached
  p = pull --stat
	pr = pull --rebase --stat
	up = pull --rebase --stat
	recent = whatchanged --since=\"1 day ago\" -p
	lg = log --graph --decorate
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format: %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	au = add -u
	fa = fetch --all --prune
	ribbon = tag --force _ribbon origin/master
	catchup = log --patch --reverse --topo-order _ribbon..origin/master
[core]
	excludesfile = /Users/nathan/.gitignore
	autocrlf = input
	pager = less -r
[branch]
	autosetupmerge = true
	autosetuprebase = remote
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[pull]
	rebase = true
[push]
	default = tracking
[include]
	path = code/gitconfig
	path = work/gitconfig
	path = .gitsecrets
