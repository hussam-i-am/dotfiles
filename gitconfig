[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[apply]
	whitespace = fix
[alias]
	ci = commit -v
	cia = commit -av
	st = status -sb
	co = checkout
	dh = diff -w HEAD
	ds = diff HEAD --stat
	unstage = reset HEAD --
	untrack = rm --cached
	di = diff --cached
	du = !git diff `git merge-base HEAD origin/master`
	p = pull --stat
	recent = whatchanged --since=\"1 day ago\" -p
  lg = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n'
  lgs = log --color --graph --date=iso --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n%+b' --stat
	au = add -u
	fa = fetch --all --prune
	ribbon = tag --force _ribbon origin/master
	catchup = log --patch --reverse --topo-order _ribbon..origin/master
	apply-commit = !git format-patch -1 --stdout $@ | git apply - --reject
	amend = commit --amend
	ca = commit --amend -v
	rc = rebase --continue
	ri = rebase --interactive
	riu = rebase --interactive @{upstream}
	s = stash
	sp = stash pop
	ap = add -p
	lp = log -p
	ss = stash show -p
	ls = log -p -S
[core]
	excludesfile = /opt/boxen/config/git/gitignore
	autocrlf = input
[branch]
	autosetupmerge = true
	autosetuprebase = remote
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[diff]
	tool = opendiff
	algorithm = patience
[merge]
	tool = opendiff
	conflictstyle = diff3
	ff = no
[pull]
	rebase = true
[push]
	default = tracking
[include]
	path = code/gitconfig
	path = work/gitconfig
	path = .gitsecrets
[advice]
	statusHints = false
[rerere]
	enabled = true
[credential]
	helper = /opt/boxen/bin/boxen-git-credential
[user]
	name = Nathan Witmer
	email = nathan@zerowidth.com

[hub]
protocol = https
[github]
	username = zerowidth
