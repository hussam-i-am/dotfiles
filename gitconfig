[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[svn]
[apply]
	whitespace = fix
[alias]
	ci = commit -v
	cia = commit -av
	st = status -sb
	co = checkout
	dh = diff -w HEAD
	ds = diff HEAD --stat
	unstage = reset HEAD --
  untrack = rm --cached
	di = diff --cached
  p = pull --stat
	recent = whatchanged --since=\"1 day ago\" -p
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n'
	lgs = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %ad) %C(blue)<%an>%Creset%n%+b' --stat
	graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format: %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	au = add -u
	fa = fetch --all --prune
	ribbon = tag --force _ribbon origin/master
	catchup = log --patch --reverse --topo-order _ribbon..origin/master
	apply-commit = !git format-patch -1 --stdout $@ | git apply - --reject
	amend = commit --amend -C HEAD
	ca = commit --amend -v
	rc = rebase --continue
	ri = rebase --interactive
	s = stash
	sp = stash pop
[core]
	excludesfile = /Users/nathan/.gitignore
	autocrlf = input
	pager = less -r
[branch]
	autosetupmerge = true
	autosetuprebase = remote
[diff "ruby"]
	funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)
[diff]
	tool = opendiff
[merge]
	tool = opendiff
	conflictstyle = diff3
[pull]
	rebase = true
[push]
	default = tracking
[include]
	path = code/gitconfig
	path = work/gitconfig
	path = .gitsecrets
