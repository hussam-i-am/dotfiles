#!/usr/bin/env zsh

ext=$1
shift
echo "tdd with .${ext} files: $@"

function run() {
  echo
  echo "$(date | colorize 5) $@"
  echo
  if sh -c "$@"; then
    echo "================================================================================" | colorize 2
  else
    echo "================================================================================" | colorize 1
  fi
}

run "$@"
while true; do
  if [ -n "$LINUX" ]; then
    # fswatch on linux sucks compared to fsnotify on mac, so just watch only the changed files
    git branch-changes | grep .$ext | xargs fswatch -1
  else
    fswatch -e'.*' -i "\\.${ext}" -1 .
  fi
  run "$@"
done
